<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.rudy.calculator.calculator.MainActivity">


    <EditText
        android:id="@+id/etnumber"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/grey"
        android:ems="10"
        android:enabled="false"
        android:focusable="false"
        android:gravity="end"
        android:inputType="textPersonName"
        android:padding="15sp"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/buac"
                android:layout_width="45pt"
                android:layout_height="45pt"
                android:layout_marginEnd="1pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/buttonbackground"
                android:onClick="buclear"
                android:text="AC"
                android:textSize="24sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/busign"
                android:layout_width="45pt"
                android:layout_height="45pt"
                android:layout_marginEnd="1pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/buttonbackground"
                android:onClick="signChange"
                android:text="+/-"
                android:textSize="24sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/bumod"
                android:layout_width="45pt"
                android:layout_height="45pt"
                android:layout_marginEnd="1pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/buttonbackground"
                android:onClick="bupercent"
                android:text="%"
                android:textSize="24sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/budiv"
                android:layout_width="45pt"
                android:layout_height="45pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:onClick="OpEvent"
                android:text="÷"
                android:textColor="@color/white"
                android:textSize="24sp"
                tools:ignore="ButtonStyle" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/bu7"
                android:layout_width="45pt"
                android:layout_height="45pt"
                android:layout_marginEnd="1pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/buttonbackground"
                android:onClick="NumberEvent"
                android:text="7"
                android:textSize="24sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/bu8"
                android:layout_width="45pt"
                android:layout_height="45pt"
                android:layout_marginEnd="1pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/buttonbackground"
                android:onClick="NumberEvent"
                android:text="8"
                android:textSize="24sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/bu9"
                android:layout_width="45pt"
                android:layout_height="45pt"
                android:layout_marginEnd="1pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/buttonbackground"
                android:onClick="NumberEvent"
                android:text="9"
                android:textSize="24sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/bumul"
                android:layout_width="45pt"
                android:layout_height="45pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:onClick="OpEvent"
                android:text="x"
                android:textColor="@color/white"
                android:textSize="24sp"
                tools:ignore="ButtonStyle" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/bu4"
                android:layout_width="45pt"
                android:layout_height="45pt"
                android:layout_marginEnd="1pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/buttonbackground"
                android:onClick="NumberEvent"
                android:text="4"
                android:textSize="24sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/bu5"
                android:layout_width="45pt"
                android:layout_height="45pt"
                android:layout_marginEnd="1pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/buttonbackground"
                android:onClick="NumberEvent"
                android:text="5"
                android:textSize="24sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/bu6"
                android:layout_width="45pt"
                android:layout_height="45pt"
                android:layout_marginEnd="1pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/buttonbackground"
                android:onClick="NumberEvent"
                android:text="6"
                android:textSize="24sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/buminus"
                android:layout_width="45pt"
                android:layout_height="45pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:onClick="OpEvent"
                android:text="―"
                android:textColor="@color/white"
                android:textSize="24sp"
                tools:ignore="ButtonStyle" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/bu1"
                android:layout_width="45pt"
                android:layout_height="45pt"
                android:layout_marginEnd="1pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/buttonbackground"
                android:onClick="NumberEvent"
                android:text="1"
                android:textSize="24sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/bu2"
                android:layout_width="45pt"
                android:layout_height="45pt"
                android:layout_marginEnd="1pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/buttonbackground"
                android:onClick="NumberEvent"
                android:text="2"
                android:textSize="24sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/bu3"
                android:layout_width="45pt"
                android:layout_height="45pt"
                android:layout_marginEnd="1pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/buttonbackground"
                android:onClick="NumberEvent"
                android:text="3"
                android:textSize="24sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/buplus"
                android:layout_width="45pt"
                android:layout_height="45pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:onClick="OpEvent"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="24sp"
                tools:ignore="ButtonStyle" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bu0"
            android:layout_width="90pt"
            android:layout_height="45pt"
            android:layout_marginEnd="1.3pt"
            android:layout_marginRight="1.3pt"
            android:layout_weight="2"
            android:background="@color/buttonbackground"
            android:onClick="NumberEvent"
            android:text="0"
            android:textSize="24sp"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/budot"
            android:layout_width="45pt"
            android:layout_height="45pt"
            android:layout_marginEnd="1pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/buttonbackground"
            android:onClick="NumberEvent"
            android:text="."
            android:textSize="24sp"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/buequal"
            android:layout_width="45pt"
            android:layout_height="45pt"
            android:layout_weight="1"
            android:background="@color/orange"
            android:onClick="buEqual"
            android:text="="
            android:textColor="@color/white"
            android:textSize="24sp"
            tools:ignore="ButtonStyle" />
    </LinearLayout>
</LinearLayout>
